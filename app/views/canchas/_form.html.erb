<%= form_with(model: cancha, local: true) do |form| %>
  <% if cancha.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cancha.errors.count, "error") %> impidieron guardar la cancha:</h2>
      <ul>
        <% cancha.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :numero %><br>
    <%= form.number_field :numero %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
