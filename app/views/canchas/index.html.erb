<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold text-primary">Canchas</h1>
    <%= link_to new_cancha_path, class: "btn btn-success btn-lg" do %>
      <i class="bi bi-plus-circle me-2"></i> Nueva Cancha
    <% end %>
  </div>

  <div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th>Nombre</th>
          <th>Número</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @canchas.each do |cancha| %>
          <tr>
            <td><%= cancha.nombre %></td>
            <td><%= cancha.numero %></td>
            <td class="text-center">
              <%= link_to cancha_path(cancha), class: "btn btn-info btn-sm me-1", title: "Mostrar" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_cancha_path(cancha), class: "btn btn-warning btn-sm me-1", title: "Editar" do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
              <%= link_to cancha_path(cancha), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger btn-sm", title: "Eliminar" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
