<style>
.campeonatos-contenedor {
  padding: 2rem 1rem 3rem;
  max-width: 1200px;
  margin: 0 auto;
  color: white;
}

.filtros {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-bottom: 2rem;
  justify-content: center;
}

.filtros select {
  padding: 0.6rem 1rem;
  border-radius: 8px;
  border: none;
  font-size: 1rem;
}


.campeonatos-grid {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}


.campeonato-item {
  width: 100%;
}


.campeonato-card {
  display: flex;
  flex-direction: row;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
  color: #222;
  min-height: 160px;
  transition: transform 0.3s ease;
}

.campeonato-card:hover {
  transform: scale(1.02);
}

.campeonato-img {
  width: 200px;
  height: 100%;
  object-fit: cover;
  border-right: 3px solid #007bff;
}

.campeonato-body {
  padding: 1rem 1.5rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.campeonato-titulo {
  font-weight: bold;
  font-size: 1.2rem;
  margin-bottom: 0.3rem;
  color: #111;
}

.campeonato-detalle {
  margin-bottom: 0.4rem;
  font-size: 0.95rem;
  color: #333;
}

.campeonato-btn {
  padding: 0.5rem;
  font-weight: bold;
  font-size: 1rem;
  background: linear-gradient(135deg, #007bff, #0056b3);
  border: none;
  border-radius: 10px;
  color: white;
  cursor: pointer;
  width: fit-content;
  align-self: flex-start;
}

.campeonato-btn:hover {
  background: linear-gradient(135deg, #0056b3, #003f7f);
}

</style>
<div class="campeonatos-contenedor campeonatos-fondo">
  <h1 class="campeonatos-titulo">Campeonatos Disponibles</h1>

  <%= form_with url: campeonatos_path, method: :get, local: true do %>
    <div class="filtros">
      <%= select_tag :club_id,
        options_from_collection_for_select(Club.all, :id, :nombre, params[:club_id]),
        include_blank: 'Todos los clubes',
        onchange: 'this.form.submit();'
      %>

      <%= select_tag :tipo,
        options_for_select(Campeonato.distinct.pluck(:tipo), params[:tipo]),
        include_blank: 'Todos los tipos',
        onchange: 'this.form.submit();'
      %>
    </div>
  <% end %>

  <div class="campeonatos-grid">
    <% @campeonatos.each do |campeonato| %>
      <div class="campeonato-item">
        <div class="campeonato-card">
          <% if campeonato.foto.attached? %>
            <%= image_tag campeonato.foto, class: "campeonato-img" %>
          <% else %>
            <%= image_tag 'https://golfsantodomingo.cl/wp-content/uploads/2023/01/torneo-padel.png', class: "campeonato-img" %>
          <% end %>

          <div class="campeonato-body">
            <div>
              <h6 class="campeonato-titulo"><%= campeonato.nombre %></h6>
              <h6 class="campeonato-titulo"><%= campeonato.tipo %></h6>
              <p class="campeonato-detalle"><strong>Club:</strong> <%= campeonato.club.nombre if campeonato.club %></p>
              <p class="campeonato-detalle"><strong>Inicio:</strong> <%= campeonato.fecha_inicio.strftime('%d/%m/%Y') %></p>
            </div>
            <%= link_to "Inscribirse", new_inscripcione_path(campeonato_id: campeonato.id), class: "campeonato-btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

