<!-- Banner -->
<div class="banner-campeonatos">
  <h2>ðŸŽ¾ Busca tu campeonato</h2>
</div>

<!-- Contenedor general -->
<div class="campeonatos-lista">
  <% @campeonatos.each do |campeonato| %>
    <div class="campeonato-card">
      <% if campeonato.foto.attached? %>
        <%= image_tag campeonato.foto, class: "campeonato-img" %>
      <% else %>
        <%= image_tag 'https://golfsantodomingo.cl/wp-content/uploads/2023/01/torneo-padel.png', class: "campeonato-img" %>
      <% end %>

      <div class="contenido-campeonato">
        <h3 class="titulo"><%= campeonato.nombre %></h3>
        <p class="dato"><strong>Tipo:</strong> <%= campeonato.tipo %></p>
        <p class="dato"><strong>Fecha inicio:</strong> <%= campeonato.fecha_inicio.strftime('%d/%m/%Y') %></p>
        <p class="dato"><strong>Club:</strong> <%= campeonato.club&.nombre %></p>

        <%= link_to "Inscribirse", new_inscripcione_path(campeonato_id: campeonato.id), class: "btn-inscribirse" %>
      </div>
    </div>
  <% end %>
</div>
