<!-- Fuente Oswald -->
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap" rel="stylesheet">

<section class="vh-100 d-flex justify-content-center align-items-center text-white"
         style="
           font-family: 'Oswald', sans-serif;
           background-image: url('https://media.istockphoto.com/id/1473484607/es/foto/j%C3%B3venes-jugando-al-padel-tennis.jpg?s=612x612&w=0&k=20&c=bobo3NbiZ8ymuhi2ugGu5CSQ8frtiZ7KVJYY4cof8pc=');
           background-size: cover;
           background-position: center;
         ">
  <div style="width: 100%; max-width: 500px; padding: 2rem; backdrop-filter: blur(8px); background-color: rgba(0,0,0,0.5); border-radius: 15px;">
    <h2 class="text-center mb-4 fw-bold" style="color: #f2b705; text-shadow: 2px 2px 5px rgba(0,0,0,0.7); font-size: 2.5rem;">
      Registro
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="mb-3">
        <%= f.label :nombre, class: "form-label" %>
        <%= f.text_field :nombre, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="mb-3">
        <%= f.label :telefono, class: "form-label" %>
        <%= f.text_field :telefono, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="mb-3">
        <%= f.label :categoria, class: "form-label" %>
        <%= f.text_field :categoria, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", style: "border-radius: 10px;" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Registrarse", class: "btn btn-warning fw-bold", style: "border-radius: 10px;" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
