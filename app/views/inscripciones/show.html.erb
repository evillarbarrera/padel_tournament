

<div class="background-container">
  <div class="ticket">
    <div class="ticket-header">
      <h2>Confirmación de Inscripción</h2>
      <p class="ticket-date"><%= @inscripcion.created_at.strftime("%d/%m/%Y %H:%M") %></p>
    </div>

    <div class="ticket-body">
      <p><span>Jugador:</span> <%= @inscripcion.user.nombre %></p>
      <p><span>Campeonato:</span> <%= @inscripcion.campeonato.nombre %></p>
      <p><span>Categoría:</span> <%= @inscripcion.categoria.nombre %></p>
      <p><span>Tipo de Inscripción:</span> <%= @inscripcion.tipo_inscripcion.nombre %></p>
      <p><span>Monto:</span> $<%= number_with_precision(@inscripcion.tipo_inscripcion.monto, precision: 0, delimiter: ",") %></p>
    </div>

    <div class="ticket-footer">

    <%= link_to 'Volver al inicio', root_path, class: "btn btn-primary mt-3" %> 
      <p>¡Gracias por inscribirte! Te esperamos en el campeonato.</p>
    </div>
  </div>
</div>


