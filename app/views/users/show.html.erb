<!-- Fuente Oswald -->
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap" rel="stylesheet">

<section class="vh-100 d-flex" style="font-family: 'Oswald', sans-serif;">
  <!-- Solo columna derecha que ocupa toda la pantalla -->
  <div class="w-100 d-flex flex-column justify-content-center align-items-center text-white"
       style="
         padding: 3rem;
         background-image: url('https://plus.unsplash.com/premium_photo-1708692919998-e3dc853ef8a8?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8cGFkZWwlMjB0ZW5uaXN8ZW58MHx8MHx8fDA%3D');
         background-size: cover;
         background-position: center;
       ">
    <div style="width: 100%; max-width: 480px; text-align: center;">
      <h1 class="mb-4 fw-bold" style="color: #f2b705; text-shadow: 2px 2px 5px rgba(0,0,0,0.7); font-size: 3rem;">
        Mi Perfil
      </h1>

      <div class="card bg-white bg-opacity-10 border-0 shadow-lg d-flex flex-column align-items-center mx-auto" 
           style="border-radius: 15px; padding: 2rem; backdrop-filter: blur(8px); max-width: 100%;">
        <!-- Imagen de perfil -->
        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Foto de perfil" 
             class="mb-4" 
             style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 3px solid #f2b705; box-shadow: 0 0 15px rgba(242,183,5,0.8);">

        <div class="card-body text-white px-0" style="width: 100%;">
          <%= form_for @user do |f| %>
            <p class="fs-5"><strong>Nombre:</strong> <%= @user.nombre %></p>
            <p class="fs-5"><strong>Email:</strong> <%= @user.email %></p>
            <p class="fs-5"><strong>Teléfono:</strong> <%= @user.telefono %></p>
            <p class="fs-5"><strong>Categoría:</strong> <%= @user.categoria %></p>
            <p class="fs-5"><strong>Puntos:</strong> <%= @user.puntos %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
