<section class="vh-100 d-flex justify-content-center align-items-center" style="font-family: 'Oswald', sans-serif; background-image: 
url('https://images.unsplash.com/photo-1526888935184-a82d2a4b7e67?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8cGFkZWwlMjB0ZW5uaXN8ZW58MHx8MHx8fDA%3D'); background-size: cover; background-position: center; padding: 2rem;">

  <div class="card bg-white border-0 shadow-lg p-5" style="max-width: 700px; width: 100%; border-radius: 20px;">

    <h1 class="mb-4 text-center text-primary" style="font-size: 2.5rem;">Perfil de Usuario</h1>

    <% if @user.role&.nombre == 'administrador' && @user.role.club.present? %>
      <h3 class="mb-3 text-secondary">Información del Club</h3>
      <p><strong>Nombre:</strong> <%= @user.role.club.nombre %></p>
      <p><strong>Dirección:</strong> <%= @user.role.club.direccion %></p>
      <p><strong>Teléfono:</strong> <%= @user.role.club.telefono %></p>
      <p><strong>Email:</strong> <%= @user.role.club.email %></p>
      <hr class="my-4" />
    <% end %>

    <h3 class="mb-3 text-secondary">Información Personal</h3>
    <p><strong>Nombre:</strong> <%= @user.nombre %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Teléfono:</strong> <%= @user.telefono %></p>
    <p><strong>Categoría:</strong> <%= @user.categoria %></p>
    <p><strong>Puntos:</strong> <%= @user.puntos %></p>

    <div class="text-center mt-4">
      <%= link_to "Editar Perfil", edit_user_path(@user), class: "btn btn-warning px-4 py-2 fw-bold rounded-pill shadow-sm" %>
    </div>
  </div>
  
</section>
