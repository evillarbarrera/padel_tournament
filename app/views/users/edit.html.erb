<h1>Editar Perfil</h1>

<%= form_with(model: @user, url: user_path, method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :telefono %><br>
    <%= form.text_field :telefono %>
  </div>

  <div>
    <%= form.label :categoria %><br>
    <%= form.text_field :categoria %>
  </div>

  <div>
    <%= form.submit "Guardar", class: "btn btn-success" %>
  </div>
<% end %>
